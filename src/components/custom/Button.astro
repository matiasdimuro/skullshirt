---
interface Props {
    id: string,
    text: string,
}

const { id, text } = Astro.props
---

<button
    id={id}
    type="button"
    class={`px-10 py-2.5 rounded-lg bg-secondary_light text-grey_dark hover:bg-secondary_light focus:ring-2 focus:ring-secondary focus:outline-none font-medium text-sm`}
>
    {text}
</button>